@model ShoppingCartViewModel

<h2>Here's Your Shopping Cart</h2>

<div class="row gx-3">
	<div class="col-8">
		@foreach(var item in Model.ShoppingCart.ShoppingCartItems)
		{
			<div class="card mb-2" >
				<div class="row">
					<div class="col-md-4">
						@item.Quantity x @item.Sports.name
						<a class="lnk btn btn-warning" asp-controller="ShoppingCart" asp-action="RemoveFromShoppingCart" asp-route-SportsId=@item.Sports.SportsId> Remove Item </a>

						@*asp-route-sportsid=@Model.Sports.SportsId*@
						
						@*@item.Sports.playersReq*@
					</div>
					<div class="col-md-8">
						<div class="card-body" >
							@*<h6 class="card-text" > Quantity:  @item.Quantity  </h6>*@
							@*<h6 class="card-text" > @item.  </h6>*@
							@*<h6 class="card-text"> @item.Quantity * @item.Sports.playersReq </h6>*@

						</div>
					</div>
				</div>
			</div>
		}

		<h5 class="text-right">Grand Total: @Model.ShoppingCartTotal</h5>

		<p class="button">
			<a class="btn btn-secondary" asp-controller="Sports" asp-action="Index"> Continue Shopping </a>
			<a class="btn btn-secondary" asp-controller="Order" asp-action="Checkout"> Check Out </a>
		</p>
	</div>
</div>