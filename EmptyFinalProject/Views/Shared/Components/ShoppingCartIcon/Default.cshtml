@model ShoppingCartViewModel

@if(Model.ShoppingCart.ShoppingCartItems.Count > 0){
	<li class="nav-item" >
		<a asp-controller=" ShoppingCart" asp-action="Index"  style="color:red">
			<i class="bi bi-cart" >
				<span id="cart-status" >
					@Model.ShoppingCart.ShoppingCartItems.Count
				</span>
			</i>
		</a>
	</li>
}