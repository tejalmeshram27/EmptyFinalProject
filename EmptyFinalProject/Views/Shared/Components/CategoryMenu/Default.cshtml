@model IEnumerable<Category>

<li class="dropdown">
    <a asp-controller="Sports" asp-action="Index"
       class="dropdown-toggle" data-toggle="dropdown">Sports menu<b class="caret"></b></a>
    <ul class="dropdown-menu">
        @foreach (var item in Model)
        {
            <li>
                <a asp-controller="Sports" asp-action="Index"
                   asp-route-category="@item.categoryName">@item.categoryName</a>
            </li>

        }
    </ul>
    <ul>
        <a asp-controller="Sports" asp-action="Index"
           asp-route-category="">View all Sports</a>
    </ul>

</li>
